@model SN.Models.ViewModels.Account.SearchViewModel;

<div class="userList-container block-reg background-white">
    @if (Model.UsersList.Count != 0)
    {
        @foreach (var user in Model.UsersList)
        {
            <div class="list-user-container">
                <div class="user-img-container">
                    <img src="@user.Image" />
                </div>
                <div class="user-info-conatiner">
                    <label>@user.GetFullName()</label>
                    <p>@user.Status</p>
                    <p>@user.About</p>
                    @if (!user.IsFriendWithCurrent)
                    {
                        <form asp-area="" asp-controller="AccountManager" asp-action="AddFriend" asp-route-id="@user.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-primary">
                                Добавить в друзья
                            </button>
                        </form>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <label> Поиска не дал результатов</label>
    }
</div>
